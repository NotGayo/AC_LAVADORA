;====================================VARIABLES===========================================================
	
ESTADO EQU 0x20
EVENTO EQU 0x21
VALOR_DISPLAY EQU 0x22


;======================================INCIO================================================

ORG 0x0000
	AJMP INICIO
0RG 0X007b

INICIO:
	ACALL INICIALIZACIONES

MAIN:					;LAZO PRINCIPAL
	ACALL MAQ_ESTADOS
	AJMP MAIN

MAQ_ESTADOS:
	MOV A, ESTADO
	RL A
	MOV DPTR, #LISTA_EST
	JMP @A+DPTR
LISTA_EST:
	AJMP ESTADO_0 ; REPOSO
	AJMP ESTADO_1 ; COMPROBACION SOBREPESO
	AJMP ESTADO_2 ; PUERTA ABIERTA
	AJMP ESTADO_3 ; LLENANDO
	AJMP ESTADO_4 ; CALENTAR CUBA
	AJMP ESTADO_5 ; LAVADO
	AJMP ESTADO_6 ; VACIAR AGUA
	AJMP ESTADO_7 ; CENTRIFUGAR
	AJMP ESTADO_8 ; FIN

;================================INICIALIZACIONES====================================================================

INICIALIZACIONES:

	MOV ESTADO, #0
	MOV EVENTO, #0
	MOV VALOR_DISPLAY, #0
	
;=====================================================================================================

ESTADO_0:
	ACALL MQ_EVEN_0
	RET

