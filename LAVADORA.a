MAQ_ESTADOS:
	MOV A, ESTADO
	RL A
	MOV DPTR, #LISTA_EST
	JMP @A+DPTR
LISTA_EST:
	AJMP ESTADO_0 ; Nombre Estado 0
	AJMP ESTADO_1 ; Nombre Estado 1
	AJMP ESTADO_2 ; Nombre Estado 2

	AJMP ESTADO_n ; Nombre Estado n
;---------------------------------------------
ESTADO_0:
	ACALL MQ_EVEN_0
	RET

ESTADO_1:
	ACALL MQ_EVEN_1
	RET

ESTADO_2:
	ACALL MQ_EVEN_2
	RET
…
ESTADO_n:
	ACALL MQ_EVEN_n
	RET
;-----------------------------------
MQ_EVEN_0:
